        img(src='/images/2019-double-eleven/hot-afterSale/08.png', alt='', usemap="#step8")
        map(name="step8", id="step8")
          //- 云码
          area(shape="rect", coords="0, 380, 377, 445", style='cursor:pointer', href="", target="_blank")
          //- 0元入会
          area(shape="rect", coords="410, 385, 790, 445", style='cursor:pointer', href="", target="_blank")
