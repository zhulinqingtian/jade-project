          area(shape="rect", coords="825, 380, 1200, 445", style='cursor:pointer', href="", target="_blank")

    include right-menu
    script(src='/js/thirdparty/jquery-3.3.1.min.js')
    script(src='/js/thirdparty/bootstrap.min.js')
    script(src='/js/compressed/double-eleven-page.js')