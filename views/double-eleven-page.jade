        map(name="step5", id="step5")
          //- 优惠券分发
          area(shape="rect", coords="428, 141, 588, 197", style='cursor:pointer', href="", target="_blank")
          //- 宝贝收藏加购
          area(shape="rect", coords="1035, 292, 1184, 350", style='cursor:pointer', href="", target="_blank")
          //- 宝贝收藏加购-咨询
          area(shape="rect", coords="982, 377, 1143, 413", style='cursor:pointer', href="", target="_blank")
          //- 淘宝直播预告
          area(shape="rect", coords="540, 550, 688, 610", style='cursor:pointer', href="", target="_blank")
      .step.step-6
        img(src='/images/2019-double-eleven/hot-afterSale/06.png', alt='', usemap="#step6")
        map(name="step6", id="step6")
          //- 售后客户沉淀
          area(shape="rect", coords="412, 936, 567, 1000", style='cursor:pointer', href="", target="_blank")
